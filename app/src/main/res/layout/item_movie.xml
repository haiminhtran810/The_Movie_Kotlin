<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="vn.home.app.themoviekotlin.data.model.Movie" />

        <variable
            name="url"
            type="String" />

        <import type="android.text.TextUtils" />
    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_1"
        android:paddingTop="@dimen/dp_10">

        <vn.home.app.themoviekotlin.widgets.CustomTextView
            android:id="@+id/txt_stt"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_80"
            android:gravity="center"
            android:textColor="@color/greyishBrown"
            bind:layout_constraintLeft_toLeftOf="parent"
            tools:text="1" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_movie"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:scaleType="centerCrop"
            bind:layout_constraintLeft_toRightOf="@+id/txt_stt"
            bind:loadImage="@{url}"
            tools:src="@drawable/ic_top_state" />

        <vn.home.app.themoviekotlin.widgets.CustomTextView
            android:id="@+id/txt_title_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{item.title}"
            android:textColor="@android:color/black"
            bind:layout_constraintLeft_toRightOf="@+id/img_movie"
            tools:text="Avenger, The War" />

        <vn.home.app.themoviekotlin.widgets.CustomTextView
            android:id="@+id/txt_sound_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="10"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@{item.overview}"
            android:textColor="@color/greyishBrown"
            bind:layout_constraintLeft_toRightOf="@+id/img_movie"
            bind:layout_constraintTop_toBottomOf="@+id/txt_title_movie"
            tools:text="Sound by English" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintLeft_toRightOf="@+id/img_movie">

            <vn.home.app.themoviekotlin.widgets.CustomTextView
                android:id="@+id/txt_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/greyishBrown"
                tools:text="4.5" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:src="@drawable/ic_star" />
        </LinearLayout>


        <vn.home.app.themoviekotlin.widgets.CustomTextView
            android:id="@+id/txt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintRight_toRightOf="parent"
            tools:text="80.000 Ä‘" />

        <ImageView
            android:id="@+id/img_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black_24dp"
            bind:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/view_divider"
            style="@style/ViewDivider"
            android:layout_marginTop="@dimen/dp_10"
            bind:layout_constraintTop_toBottomOf="@+id/img_movie" />
    </android.support.constraint.ConstraintLayout>

</layout>
